<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard</title>
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="/css/bootstrap.min.css">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="/fontawesome/css/all.min.css">
    <!-- Custom CSS -->
    <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
    <div class="container">
        <h1 class="my-4">Admin Dashboard</h1>

        <!-- Tabs -->
        <ul class="nav nav-tabs" id="adminTabs" role="tablist">
            <li class="nav-item" role="presentation">
                <button class="nav-link active" id="download-tab" data-bs-toggle="tab" data-bs-target="#download" type="button" role="tab" aria-controls="download" aria-selected="true">Download</button>
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link" id="upload-tab" data-bs-toggle="tab" data-bs-target="#upload" type="button" role="tab" aria-controls="upload" aria-selected="true">Upload</button>
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link" id="list-tab" data-bs-toggle="tab" data-bs-target="#list" type="button" role="tab" aria-controls="list" aria-selected="false">List Videos</button>
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link" id="settings-tab" data-bs-toggle="tab" data-bs-target="#settings" type="button" role="tab" aria-controls="settings" aria-selected="false">Settings</button>
            </li>
        </ul>

        <!-- Tab Content -->
        <div class="tab-content" id="adminTabsContent">
            <!-- Upload Tab -->
            <div class="tab-pane fade show active" id="download" role="tabpanel" aria-labelledby="download-tab">
                <div class="card mt-3">
                    <div class="card-header">
                        <h2>Download Video</h2>
                    </div>
                    <div class="card-body">
<!-- Step 1: Get Video Info -->
<form id="video-form">
    <div class="mb-3">
        <label for="url" class="form-label">YouTube Video URL</label>
        <input type="text" class="form-control" id="url" placeholder="Enter YouTube link" required>
    </div>
    <button type="submit" class="btn btn-primary w-100">Get Video Info</button>
</form>

<!-- Step 2: Editable Form (Prefilled with videoDetails) -->
<form id="upload-form" action="/admin/downloadupload" method="POST" class="mt-4 d-none">
    <input type="hidden" name="video_url" id="video_url">

    <div class="mb-3">
        <label class="form-label">Title</label>
        <input type="text" class="form-control" name="title" id="title">
    </div>

    <div class="mb-3">
        <label class="form-label">Uploader</label>
        <input type="text" class="form-control" name="uploader" id="uploader" readonly>
    </div>

    <div class="mb-3">
        <label for="groups" class="form-label">Select Groups:</label>
        <select id="groups" name="groups[]" class="form-control" multiple>
            <% albums.forEach(album => { %>
                <option value="<%= album.id %>"><%= album.name %></option>
            <% }) %>
        </select>
    </div>
    <div class="mb-3">
        <label class="form-label">Duration</label>
        <input type="text" class="form-control" name="duration" id="duration" readonly>
    </div>

    <div class="mb-3">
        <label class="form-label">Views</label>
        <input type="text" class="form-control" name="views" id="views" readonly>
    </div>

    <div class="mb-3">
        <label class="form-label">Upload Date</label>
        <input type="text" class="form-control" name="upload_date" id="upload_date" readonly>
    </div>

    <div class="mb-3>
        <label class="form-label>Thumbnail URL</label>
        <input type="text" class="form-control" name="thumbnail" id="thumbnail" readonly>
        <img id="thumbnail-img" class="img-fluid mt-2" style="max-width: 200px; height: 200px;"/>
    </div>

    <button type="submit" class="btn btn-success w-100">Upload to Database</button>
</form>


                    </div>
                </div>
            </div>
            <!-- Upload Tab -->
            <div class="tab-pane fade" id="upload" role="tabpanel" aria-labelledby="upload-tab">
                <div class="card mt-3">
                    <div class="card-header">
                        <h2>Upload Video</h2>
                    </div>
                    <div class="card-body">
                        <form action="/admin/upload" method="POST" enctype="multipart/form-data">
                            <div class="mb-3">
                                <label for="title" class="form-label">Title:</label>
                                <input type="text" id="title" name="title" class="form-control" required>
                            </div>
                            <div class="mb-3">
                                <label for="description" class="form-label">Description:</label>
                                <textarea id="description" name="description" class="form-control" required></textarea>
                            </div>
                            <div class="mb-3">
                                <label for="video" class="form-label">Video File:</label>
                                <input type="file" id="video" name="video" class="form-control" accept="video/*" required>
                            </div>
                            <div class="mb-3">
                                <label for="thumbnail" class="form-label">Thumbnail:</label>
                                <input type="file" id="thumbnail" name="thumbnail" class="form-control" accept="image/*" required>
                            </div>
                            <div class="mb-3">
                                <label for="groups" class="form-label">Select Groups:</label>
                                <select id="groups" name="groups[]" class="form-control" multiple>
                                    <% albums.forEach(album => { %>
                                        <option value="<%= album.id %>"><%= album.name %></option>
                                    <% }) %>
                                </select>
                            </div>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-upload"></i> Upload
                            </button>
                        </form>
                    </div>
                </div>
            </div>
            <!-- List Tab -->
            <div class="tab-pane fade" id="list" role="tabpanel" aria-labelledby="list-tab">
                <div class="card mt-3">
                    <div class="card-header">
                        <h2>Video List</h2>
                    </div>
                    <div class="card-body">
                        <form action="/admin/dashboard" method="GET" class="mb-3">
                            <div class="input-group">
                                <select name="album" class="form-control" onchange="this.form.submit()">
                                    <option value="">All Videos</option>
                                    <% albums.forEach(album => { %>
                                        <option value="<%= album.id %>" <%= album.id == selectedAlbumId ? 'selected' : '' %>>
                                            <%= album.name %>
                                        </option>
                                    <% }) %>
                                </select>
                            </div>
                        </form>
                        <ul class="list-group">
                            <% if (noVideosMessage) { %>
                                <li class="list-group-item">
                                    <div class="alert alert-info">
                                        <%= noVideosMessage %>
                                    </div>
                                </li>
                            <% } else { %>
                                <% videos.forEach(video => { %>
                                    <li class="list-group-item d-flex justify-content-between align-items-center">
                                        <div class="d-flex align-items-center">
                                            <img src="<%= video.thumbnailPath %>" alt="<%= video.title %>" class="img-thumbnail me-3" style="width: 80px; height: auto;">
                                            <div>
                                                <strong><%= video.title %></strong>
                                                <p class="mb-0"><%= video.description %></p>
                                            </div>
                                        </div>
                                        <div>
                                            <button class="btn btn-sm btn-warning edit-groups-btn" data-video-id="<%= video.id %>">
                                                <i class="fas fa-edit"></i> Edit Groups
                                            </button>
                                            <form action="/admin/delete/<%= video.id %>" method="POST" style="display:inline;">
                                                <button type="submit" class="btn btn-sm btn-danger">
                                                    <i class="fas fa-trash"></i> Delete
                                                </button>
                                            </form>
                                        </div>
                                    </li>
                                <% }) %>
                            <% } %>
                        </ul>
                    </div>
                </div>
            </div>

            <!-- Settings Tab -->
            <div class="tab-pane fade" id="settings" role="tabpanel" aria-labelledby="settings-tab">
                <div class="card mt-3">
                    <div class="card-header">
                        <h2>Group Settings</h2>
                    </div>
                    <div class="card-body">
                        <!-- Add New Group -->
                        <form action="/admin/create-album" method="POST" class="mb-3">
                            <div class="mb-3">
                                <label for="albumName" class="form-label">New Group Name:</label>
                                <input type="text" id="albumName" name="albumName" class="form-control" required>
                            </div>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-plus"></i> Add Group
                            </button>
                        </form>

                        <!-- Delete Group -->
                        <form action="/admin/delete-album" method="POST" class="mb-3">
                            <div class="mb-3">
                                <label for="deleteAlbum" class="form-label">Delete Group:</label>
                                <select id="deleteAlbum" name="albumId" class="form-control" required>
                                    <% albums.forEach(album => { %>
                                        <option value="<%= album.id %>"><%= album.name %></option>
                                    <% }) %>
                                </select>
                            </div>
                            <button type="submit" class="btn btn-danger">
                                <i class="fas fa-trash"></i> Delete Group
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- jQuery -->
    <script src="/js/jquery.min.js"></script>
    <!-- Bootstrap JS -->
    <script src="/js/bootstrap.bundle.min.js"></script>
    <!-- Custom JS -->
    <script src="/js/admin.js"></script>



    <script>
        document.getElementById('video-form').addEventListener('submit', async (event) => {
            event.preventDefault();
            const url = document.getElementById('url').value;

            const response = await fetch('/info?url=' + encodeURIComponent(url));
            const result = await response.json();

            if (result.success) {
                document.getElementById('upload-form').classList.remove('d-none');

                document.getElementById('video_url').value = url;
                document.getElementById('title').value = result.videoDetails.title;
                document.getElementById('uploader').value = result.videoDetails.uploader;
                document.getElementById('duration').value = result.videoDetails.duration;
                document.getElementById('views').value = result.videoDetails.views;
                document.getElementById('upload_date').value = result.videoDetails.uploadDate;
                document.getElementById('thumbnail').value = result.videoDetails.thumbnail;
                document.getElementById('thumbnail-img').src = result.videoDetails.thumbnail;
            } else {
                alert('Failed to fetch video info.');
            }
        });
    </script>
</body>
</html>